@model IEnumerable<Team>

<!--Have a button that always goes back to the home display-->
<div>
    <a class="btn btn-block @(ViewBag.SelectedTeam == null ? "btn-dark" : "btn-outline-dark")" asp-action="Index" asp-controller="Home" asp-route-teamid="">Home</a>

    @foreach (var x in Model)
    {
        //Set up actions to point back to Index and the home controller, as well as setting
        //up the routes for endpoint pointing
        <a class="btn btn-block @(x.TeamName == ViewBag.SelectedTeam ? "btn-dark" : "btn-outline-dark")"
           asp-action="Index" asp-controller="Home"
           asp-route-teamid="@x.TeamId" asp-route-team="@x.TeamName">
            @x.TeamName
        </a>
    }
</div>